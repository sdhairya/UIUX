<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaintenanceInvoiceActivity">

    <TextView
        android:id="@+id/txt_maintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:paddingLeft="15sp"
        android:text="Maintenance"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_select_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:paddingLeft="30sp"
        android:text="Select Month"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_maintenance" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
        app:layout_constraintBottom_toTopOf="@id/txt_invoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select_month">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:checkedButton="@+id/radio_button_1"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_jan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Jan"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_feb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Feb"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_mar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Mar"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Apr"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_may"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="May"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_jun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Jun"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_jul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Jul"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_aug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Aug"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_sep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Sep"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_oct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Oct"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_nov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Nov"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/month_circle"
                android:button="@color/transparent"
                android:paddingHorizontal="30dp"
                android:text="Dec"
                android:textAlignment="center"
                android:textColor="@drawable/radio_ownership_text"
                android:textSize="18dp" />
        </RadioGroup>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/txt_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:paddingLeft="30sp"
        android:text="Maintenance Invoice"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_scroll" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="15sp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_invoice"
        app:layout_constraintWidth_percent="0.85">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/invoice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Payment Date"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/invoice_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/invoice_date" />

            <TextView
                android:id="@+id/invoice_flat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Flat No."
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/invoice_name" />

            <TextView
                android:id="@+id/invoice_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Mobile No."
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/invoice_flat" />

            <TextView
                android:id="@+id/invoice_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Maintenance Amount"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/invoice_mobile" />

            <TextView
                android:id="@+id/invoice_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="20dp"
                android:text="Status"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/invoice_maintenance" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:backgroundTint=""/>
</androidx.constraintlayout.widget.ConstraintLayout>